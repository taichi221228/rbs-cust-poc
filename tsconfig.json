{
	"include": [
		"eslint.config.js",
		"eslint.config.*.js",
		"panda.config.ts",
		"panda.config.*.ts",
		"postcss.config.js",
		"vite.config.ts",
		"**/*.js",
		"**/*.cjs",
		"**/*.mjs",
		"**/*.ts",
		"**/*.jts",
		"**/*.mts",
		"**/*.jsx",
		"**/*.tsx"
	],
	"exclude": ["styled-system/"],
	"compilerOptions": {
		"lib": ["DOM", "DOM.Iterable", "ES2022"],
		"types": ["@remix-run/node", "vite/client"],
		"plugins": [{ "name": "eslint-plugin-import-access" }],
		"isolatedModules": true,
		"esModuleInterop": true,
		"verbatimModuleSyntax": true,
		"jsx": "react-jsx",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"resolveJsonModule": true,
		"target": "ES2022",
		"strict": true,
		"allowJs": true,
		"checkJs": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": ".",
		"paths": { "~/*": ["./app/*"] },
		"noEmit": true
	}
}
